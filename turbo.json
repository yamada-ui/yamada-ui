{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "tasks": {
    "transit": { "dependsOn": ["^transit"] },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:chromium": {
      "dependsOn": ["build"]
    },
    "test:firefox": {
      "dependsOn": ["build"]
    },
    "test:webkit": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "format": {
      "dependsOn": ["transit"]
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
