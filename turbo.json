{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "tasks": {
    "//#transit": { "dependsOn": ["^transit"] },
    "transit": { "dependsOn": ["^transit"] },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:content": {
      "dependsOn": ["transit"],
      "outputs": [".velite/**", "data/doc-map.*.json"]
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "test:coverage": {
      "dependsOn": ["transit"],
      "outputs": ["coverage/**"]
    },
    "test:chromium": {
      "dependsOn": ["transit"]
    },
    "test:firefox": {
      "dependsOn": ["transit"]
    },
    "test:webkit": {
      "dependsOn": ["transit"]
    },
    "typecheck": {
      "dependsOn": ["transit"]
    },
    "//#typecheck:scripts": {
      "dependsOn": ["transit"],
      "inputs": [
        "scripts/**",
        "tsconfig.json",
        "package.json",
        "packages/workspace/src/typescript/**",
        "packages/workspace/package.json"
      ]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "//#lint:scripts": {
      "dependsOn": ["transit"],
      "inputs": [
        "scripts/**",
        "eslint.config.ts",
        "package.json",
        "packages/workspace/src/eslint/**",
        "packages/workspace/package.json"
      ]
    },
    "format": {
      "dependsOn": ["transit"]
    },
    "//#format:scripts": {
      "dependsOn": ["transit"],
      "inputs": [
        "scripts/**",
        ".prettierrc.js",
        ".prettierignore",
        "package.json",
        "packages/workspace/src/prettier/**",
        "packages/workspace/package.json"
      ]
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
