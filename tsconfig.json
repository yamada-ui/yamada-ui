{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "downlevelIteration": true,
    "types": ["vitest/globals"],
    "allowJs": true
  },
  "include": [
    "@types",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts"
  ],
  "exclude": [
    "**/node_modules/**",
    "coverage/**",
    "examples/**",
    "docs/**/*",
    "**/bin/**",
    "**/dist/**",
    "**/.next/**",
    "**/.turbo/**",
    ".changelog/**",
    ".changeset/**",
    "storybook-static/**"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
