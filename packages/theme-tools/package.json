{
  "name": "@yamada-ui/theme-tools",
  "version": "1.0.28",
  "description": "Yamada UI theme utils",
  "keywords": [
    "yamada",
    "yamada ui",
    "theme",
    "theming",
    "ui",
    "utils",
    "utilities"
  ],
  "author": "Hirotomo Yamada <hirotomo.yamada@avap.co.jp>",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://yamada-ui.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamada-ui/yamada-ui",
    "directory": "packages/theme-tools"
  },
  "bugs": {
    "url": "https://github.com/yamada-ui/yamada-ui/issues"
  },
  "scripts": {
    "dev": "pnpm build:fast -- --watch",
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "devDependencies": {
    "clean-package": "2.2.0"
  },
  "dependencies": {
    "@yamada-ui/core": "workspace:*",
    "@yamada-ui/theme": "workspace:*",
    "@yamada-ui/utils": "workspace:*"
  },
  "clean-package": "../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ],
    "sourcemap": true
  }
}
