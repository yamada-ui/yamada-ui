{
  "name": "@yamada-ui/utils",
  "type": "module",
  "version": "2.0.0",
  "description": "The utilities for Yamada UI projects",
  "keywords": [
    "utils",
    "utilities",
    "yamada",
    "yamada ui",
    "react"
  ],
  "author": "Hirotomo Yamada <hirotomo.yamada@avap.co.jp>",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://yamada-ui.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yamada-ui/yamada-ui",
    "directory": "packages/utils"
  },
  "bugs": {
    "url": "https://github.com/yamada-ui/yamada-ui/issues"
  },
  "scripts": {
    "clean": "rimraf node_modules dist trace coverage .turbo .eslintcache",
    "build": "tsdown",
    "test": "NODE_OPTIONS=\"--experimental-strip-types\" vitest",
    "test:dev": "NODE_OPTIONS=\"--experimental-strip-types\" vitest --watch --ui",
    "typecheck": "tsc --noEmit",
    "typetrace": "tsc --noEmit --generateTrace ./trace --incremental false",
    "typeanalyze": "npx analyze-trace ./trace --expandTypes=false",
    "lint": "eslint . --max-warnings=0 --cache",
    "format": "prettier . --ignore-path ../../.prettierignore --check --cache",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "color2k": "^2.0.3"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
    "react": "^19.1.0"
  },
  "peerDependencies": {
    "react": ">=19"
  },
  "clean-package": "./clean-package.config.json"
}
